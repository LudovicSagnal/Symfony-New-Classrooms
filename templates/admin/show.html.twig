{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/crud.css') }}"/>
{% endblock %}


{% block body %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}">retour à la liste</a>

    <a href="{{ path('app_admin_edit', {'id': user.id}) }}">modifier</a>

    {{ include('admin/_delete_form.html.twig') }}
{% endblock %}
